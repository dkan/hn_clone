<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<br />

<%= form_for(:session, url: sessions_path) do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <%= f.submit "Sign in", class: "btn btn-large btn-success" %>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
